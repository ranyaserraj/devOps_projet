{
  "name": "idurar-erp-crm-tests",
  "version": "1.0.0",
  "description": "Baseline tests for IDURAR ERP CRM",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "test:load": "artillery run tests/load/load-test.yml",
    "test:security": "npm audit && snyk test",
    "test:all": "npm run test && npm run test:integration && npm run test:performance",
    "test:baseline": "jest --testPathPattern=optimized",
    "test:baseline:backend": "jest --testPathPattern=backend.*optimized",
    "test:baseline:frontend": "jest --testPathPattern=frontend.*optimized",
    "test:baseline:performance": "jest --testPathPattern=performance.*optimized"
  },
  "dependencies": {
    "artillery": "^2.0.0",
    "axios": "^1.12.2",
    "chai": "^4.3.10",
    "cypress": "^13.6.0",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "moment": "^2.30.1",
    "playwright": "^1.40.0",
    "puppeteer": "^21.6.0",
    "selenium-webdriver": "^4.15.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "webdriverio": "^8.15.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
