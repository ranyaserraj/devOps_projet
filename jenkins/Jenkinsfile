pipeline {
    agent any
    
    options {
        timeout(time: 10, unit: 'MINUTES')
        timestamps()
    }
    
    environment {
        NODE_VERSION = '18'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out code from GitHub...'
                git branch: 'master', url: 'https://github.com/ranyaserraj/devOps_projet.git'
            }
        }
        
        stage('Setup Environment') {
            steps {
                echo 'ğŸ”§ Setting up Linux environment...'
                script {
                    // Install Node.js if not available
                    sh '''
                        curl -fsSL https://deb.nodesource.com/setup_18.x | sudo -E bash -
                        sudo apt-get install -y nodejs
                        node --version
                        npm --version
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing dependencies...'
                sh '''
                    cd tests
                    npm install
                '''
            }
        }
        
        stage('Backend Tests') {
            steps {
                echo 'ğŸ§ª Running Backend API Tests...'
                sh '''
                    cd tests
                    node backend-corrected.test.js
                '''
            }
        }
        
        stage('Frontend Tests') {
            steps {
                echo 'ğŸ¨ Running Frontend Tests...'
                sh '''
                    cd tests
                    node frontend-simple.test.js
                '''
            }
        }
        
        stage('Performance Tests') {
            steps {
                echo 'âš¡ Running Performance Tests...'
                sh '''
                    cd tests
                    node performance-simple.test.js
                '''
            }
        }
        
        stage('Full Test Suite') {
            steps {
                echo 'ğŸš€ Running Complete Test Suite...'
                sh '''
                    cd tests
                    node test-runner.js
                '''
            }
        }
    }
    
    post {
        always {
            echo 'ğŸ“Š Test execution completed!'
        }
        success {
            echo 'âœ… All tests passed successfully!'
        }
        failure {
            echo 'âŒ Some tests failed!'
        }
    }
}