pipeline {
    agent any
    
    options {
        timeout(time: 10, unit: 'MINUTES')
        timestamps()
    }
    
    environment {
        NODE_VERSION = '18'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Checking out code from GitHub...'
                git branch: 'master', url: 'https://github.com/ranyaserraj/devOps_projet.git'
            }
        }
        
        stage('Setup Environment') {
            steps {
                echo 'üîß Setting up Linux environment...'
                script {
                    // Install Node.js using nvm (no sudo required)
                    sh '''
                        # Install nvm
                        curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash
                        export NVM_DIR="$HOME/.nvm"
                        [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
                        
                        # Install and use Node.js 18
                        nvm install 18
                        nvm use 18
                        
                        # Verify installation
                        node --version
                        npm --version
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                echo 'üì¶ Installing dependencies...'
                sh '''
                    # Load nvm
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
                    nvm use 18
                    
                    cd tests
                    npm install
                '''
            }
        }
        
        stage('Backend Tests') {
            steps {
                echo 'üß™ Running Backend API Tests...'
                sh '''
                    # Load nvm
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
                    nvm use 18
                    
                    cd tests
                    node backend-corrected.test.js
                '''
            }
        }
        
        stage('Frontend Tests') {
            steps {
                echo 'üé® Running Frontend Tests...'
                sh '''
                    # Load nvm
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
                    nvm use 18
                    
                    cd tests
                    node frontend-simple.test.js
                '''
            }
        }
        
        stage('Performance Tests') {
            steps {
                echo '‚ö° Running Performance Tests...'
                sh '''
                    # Load nvm
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
                    nvm use 18
                    
                    cd tests
                    node performance-simple.test.js
                '''
            }
        }
        
        stage('Full Test Suite') {
            steps {
                echo 'üöÄ Running Complete Test Suite...'
                sh '''
                    # Load nvm
                    export NVM_DIR="$HOME/.nvm"
                    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
                    nvm use 18
                    
                    cd tests
                    node test-runner.js
                '''
            }
        }
    }
    
    post {
        always {
            echo 'üìä Test execution completed!'
        }
        success {
            echo '‚úÖ All tests passed successfully!'
        }
        failure {
            echo '‚ùå Some tests failed!'
        }
    }
}