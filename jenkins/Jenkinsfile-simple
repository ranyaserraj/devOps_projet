pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ranyaserraj/devOps_projet.git'
            }
        }
        
        stage('Tests') {
            steps {
                sh '''
                    cd tests
                    npm install
                    node test-runner.js
                '''
            }
        }
    }
    
    post {
        always {
            echo 'Tests completed!'
        }
    }
}
