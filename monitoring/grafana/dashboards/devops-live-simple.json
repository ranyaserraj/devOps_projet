{
  "dashboard": {
    "id": null,
    "title": "DevOps Project - Live Docker Metrics",
    "tags": ["devops", "containers", "live"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage - Live Docker Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"idurar-.*\"}[1m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Memory Usage - Live Docker Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"idurar-.*\"}",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "2s"
  }
}
