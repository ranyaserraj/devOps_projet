{
  "dashboard": {
    "id": null,
    "title": "DevOps Non-Optimisé - Simple",
    "tags": ["devops", "non-optimized", "simple"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage - Tous les Conteneurs",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total[5m]) * 100",
            "legendFormat": "{{id}}"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "max": 100,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Memory Usage - Tous les Conteneurs",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes / 1024 / 1024",
            "legendFormat": "{{id}}"
          }
        ],
        "yAxes": [
          {
            "label": "Memory MB",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Résumé DevOps Non-Optimisé",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total[5m])) * 100",
            "legendFormat": "CPU Total %"
          },
          {
            "expr": "sum(container_memory_usage_bytes) / 1024 / 1024",
            "legendFormat": "RAM Total MB"
          },
          {
            "expr": "count(container_memory_usage_bytes)",
            "legendFormat": "Conteneurs Total"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
