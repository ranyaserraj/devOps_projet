{
  "dashboard": {
    "id": null,
    "title": "DevOps Project - Conteneurs Non-Optimisés (Live)",
    "tags": ["devops", "non-optimized", "containers", "live"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage - Conteneurs DevOps",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"idurar-.*\"}[5m]) * 100",
            "legendFormat": "{{name}} - CPU %"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "max": 100,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "xAxes": [
          {
            "type": "time"
          }
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage - Conteneurs DevOps",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"idurar-.*\"} / 1024 / 1024",
            "legendFormat": "{{name}} - Memory MB"
          }
        ],
        "yAxes": [
          {
            "label": "Memory MB",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "xAxes": [
          {
            "type": "time"
          }
        ]
      },
      {
        "id": 3,
        "title": "Network I/O - Conteneurs DevOps",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\"idurar-.*\"}[5m])",
            "legendFormat": "{{name}} - RX"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\"idurar-.*\"}[5m])",
            "legendFormat": "{{name}} - TX"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "xAxes": [
          {
            "type": "time"
          }
        ]
      },
      {
        "id": 4,
        "title": "Résumé DevOps Project",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"idurar-.*\"}[5m])) * 100",
            "legendFormat": "CPU Total %"
          },
          {
            "expr": "sum(container_memory_usage_bytes{name=~\"idurar-.*\"}) / 1024 / 1024",
            "legendFormat": "RAM Total MB"
          },
          {
            "expr": "count(container_memory_usage_bytes{name=~\"idurar-.*\"})",
            "legendFormat": "Conteneurs DevOps"
          },
          {
            "expr": "sum(rate(container_network_receive_bytes_total{name=~\"idurar-.*\"}[5m]))",
            "legendFormat": "Network RX B/s"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "État des Conteneurs DevOps",
        "type": "table",
        "targets": [
          {
            "expr": "container_last_seen{name=~\"idurar-.*\"}",
            "format": "table",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "annotations": {
      "list": [
        {
          "name": "DevOps Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "container_last_seen{name=~\"idurar-.*\"}",
          "iconColor": "rgba(0, 211, 255, 1)"
        }
      ]
    }
  }
}
